sudo docker run -d --network host --name mongodb \                                        
  -e MONGO_INITDB_ROOT_USERNAME=${MONGO_ROOT_USER} \
  -e MONGO_INITDB_ROOT_PASSWORD=${MONGO_ROOT_PASSWORD} \
  -e MONGO_INITDB_DATABASE=${MONGO_DB_NAME} \
  mongo

sudo docker run -d --name redis-server --network host redis:latest
